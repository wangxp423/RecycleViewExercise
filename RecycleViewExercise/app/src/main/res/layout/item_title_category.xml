<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <TextView
        android:id="@+id/recommend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/icon_recommend_hot_city"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:textColor="@color/cont_a"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/recommend_title_detail"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="center"
        android:layout_gravity="right|center_vertical"
        android:src="@drawable/recommend_title_detail" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:background="@color/line_d" />
</FrameLayout>