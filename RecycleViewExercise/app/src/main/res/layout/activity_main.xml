<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt_type_taggertype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="复杂样式类型布局" />
    <Button
        android:id="@+id/bt_composite_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="复合布局RecyclerView" />
    <Button
        android:id="@+id/bt_pull_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RecyclerView下拉刷新" />
    <Button
        android:id="@+id/bt_statuslist_drawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试StatusListDrawable" />
</LinearLayout>
